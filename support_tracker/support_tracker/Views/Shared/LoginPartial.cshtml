
@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Accounts", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">@Html.ActionLink(User.Identity.GetUserName(), "Login", "Accounts", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Log out", "Logout", "Accounts", null, new { @class = "nav-link" })</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink("Login", "Login", "Accounts", null, new { @class = "nav-link" })</li>
    </ul>
}