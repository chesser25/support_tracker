@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issues tracker</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/messageList")
    @Styles.Render("~/Content/pagedList")
    @Styles.Render("~/Content/site")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Support tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Accounts", null, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item">@Html.ActionLink("Create ticket", "Create", "Tickets", null, new { @class = "nav-link" })</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Dashboard", "GetTickets", "Tickets", null, new { @class = "nav-link" })</li>
                    }
                </ul>
                @{
                    Html.RenderPartial("LoginPartial");
                }
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/ajax")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
        
        <footer class="container footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - The issue tracking system</p>
        </footer>
    </div>
</body>
</html>