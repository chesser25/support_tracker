@model IEnumerable<support_tracker.Models.Ticket>

@{
    ViewBag.Title = "TicketsList";
}

<div class="pt-2 text-center">
    <h1>List of all tickets</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Customer Email</th>
            <th scope="col">Subject</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <th scope="row">i + 1</th>
                <td>Model[i].CustomerName</td>
                <td>Model[i].CustomerEmail</td>
                <td>Model[i].Subject</td>
            </tr>
        }
    </tbody>
</table>